@model SistemaCore7.Models.ViewsModels.ProductoVM
@{
    ViewData["Title"] = "Actualizar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xl">
    <h1 class="text-center my-4 fw-semibold">Actualizar Producto</h1>

    <form asp-action="Editar" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly"></div>
        <input asp-for="Producto.Id" hidden />
        <div class="row d-flex justify-content-center align-items-center    ">
            <div class="col-12 col-md-6 bg-white p-3 rounded-3 shadow-lg">

                <div class="row">
                    <div class="col-12 col-md-4">
                        <label asp-for="Producto.Codigo" class="form-label text-uppercase fw-bold text-muted"></label>
                        <input asp-for="Producto.Codigo" type="text" class="form-control" placeholder="#Codigo" readonly />
                        <span asp-validation-for="Producto.Codigo" class="text-danger"></span>
                    </div>

                    <div class="col-12 col-md-4">
                        <div class="mb-2">
                            <label asp-for="Producto.Costo" class="form-label text-uppercase fw-bold text-muted"></label>
                            <input asp-for="Producto.Costo" type="number" class="form-control" placeholder="$0.00" />
                            <span asp-validation-for="Producto.Costo" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12 col-md-4">
                        <div class="mb-2">
                            <label asp-for="Producto.Precio" class="form-label text-uppercase fw-bold text-muted"></label>
                            <input asp-for="Producto.Precio" type="number" class="form-control" placeholder="$0.00" />
                            <span asp-validation-for="Producto.Precio" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 col-md-6">
                        <div class="mb-2">
                            <label asp-for="Producto.Categoria.Nombre" class="form-label text-uppercase fw-bold text-muted"></label>
                            <select asp-for="Producto.CategoriaId" asp-items="@Model.ListaCategorias" class="form-select">
                                <option disabled selected>Seleccione Categoria</option>
                            </select>
                            <span asp-validation-for="Producto.CategoriaId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="mb-2">
                            <label asp-for="Producto.Marca.Nombre" class="form-label text-uppercase fw-bold text-muted"></label>
                            <select asp-for="Producto.MarcaId" asp-items="@Model.ListaMarcas" class="form-select">
                                <option disabled selected>Seleccione Marca</option>
                            </select>
                            <span asp-validation-for="Producto.MarcaId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 col-md-6">
                        <div class="mb-2">
                            <label for="imagen" class="form-label text-uppercase fw-bold text-muted">Imagen</label>
                            <input name="imagen" id="imagen" type="file" class="form-control" />
                        </div>
                    </div>

                    <div class="col-12 col-md-6">
                        <div class="mb-2">
                            <label asp-for="Producto.Estado" class="form-label text-uppercase fw-bold text-muted"></label>
                            <select asp-for="Producto.Estado" class="form-select">
                                <option selected disabled>Seleccione</option>
                                <option value="true">Activo</option>
                                <option value="false">Inactivo</option>
                            </select>
                            <span asp-validation-for="Producto.Estado" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-2">
                    <label asp-for="Producto.Descripcion" class="form-label text-uppercase fw-bold text-muted"></label>
                    <input asp-for="Producto.Descripcion" type="text" class="form-control" placeholder="Descripcion" />
                    <span asp-validation-for="Producto.Descripcion" class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <button type="submit" class="btn btn-primary"> <i class="bi bi-save2"></i> Guardar</button>
                    <a asp-action="Index" class="btn btn-success"> <i class="bi bi-arrow-return-left"></i> Atras</a>
                </div>
            </div>
            <div class="col-12 col-md-5 offset-md-1 text-center text-md-start">
                <img src="@Model.Producto.ImagenUrl" class="img-fluid shadow-lg bg-white rounded-3 mt-3 mt-md-0" />
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}




