@model Categoria
@{
    ViewData["Title"] = "Actualizar Categoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xl">
    <h1 class="text-center my-4">Actualizar Categoria</h1>

    <form asp-action="Editar">
        <div asp-validation-summary="ModelOnly"></div>
        <input asp-for="Id" hidden />
        <div class="row">
            <div class="col-12 col-lg-8 offset-lg-2 bg-white p-3 rounded-3 shadow-lg">
                <div class="mb-2">
                    <label asp-for="Nombre" class="form-label text-uppercase fw-bold text-muted"></label>
                    <input asp-for="Nombre" type="text" class="form-control" placeholder="Nombre de Marca" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="Estado" class="form-label text-uppercase fw-bold text-muted"></label>
                    <select asp-for="Estado" class="form-select">
                        <option disabled selected>Seleccione</option>
                        <option value="true">Activo</option>
                        <option value="false">Inactivo</option>
                    </select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <div>
                    <button type="submit" class="btn btn-primary"> <i class="bi bi-pencil-square"></i> Actualizar</button>
                    <a asp-action="Index" class="btn btn-success"> <i class="bi bi-arrow-return-left"></i> Atras</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}


